	<script type="text/javascript">
	
	$(document).ready(function() 
		    {
				$("#filieresSelect").change(function() {
					alert("document ready");
			
				});
				
				$('#btnCancel').click(function(e) {
					$('#myModal').modal('hide');
					 // e.preventDefault();
					  return false;
			
				});
				$('#btnNew').on('click', function(e){
					  //------------ load filières to select form
					  	  $('#myForm').trigger("reset");
						  $.ajax({
							url : "FiliereList",
							type: "GET",
							dataType: 'json',
							success: function(response,textStatus ,jqXHR){
								$("#filiere").html("");
								for(i=0;i<response.length;i++){
									content = "<option value=\""+response[i].id +"\"> " +response[i].code+ "</option> ";
					                $("#filiere").append(content);
								}
						    },
						    error: function(response,textStatus ,jqXHR){
						    	console.log("Something really bad happened " + textStatus);
			                      $("#ajaxResponse").html(jqXHR.responseText);
						        }
						        
						});
					  //----------- load niveaux to select form
					  
					  $.ajax({
							url : "NiveauList",
							type: "GET",
							dataType: 'json',
							success: function(response,textStatus ,jqXHR){
								$("#niveau").html("");
								for(i=0;i<response.length;i++){
									content = "<option value=\""+response[i].id +"\"> " +response[i].code+ "</option> ";
					                $("#niveau").append(content);
								}
						    },
						    error: function(response,textStatus ,jqXHR){
						    	alert(textStatus);
						    	console.log("Something really bad happened " + textStatus);
			                      $("#ajaxResponse").html(jqXHR.responseText);
						        }
						        
						});
					  //-------------------------
					  
					  $('#myModal').modal('show');
					  e.preventDefault();
					});
				
				$('#btnTest').on('click', function(e){
					  $('#modalResult').modal('show');
					  e.preventDefault();
					});
				$("#myForm").submit(function(event){ 
					var post_url = $(this).attr("action"); //get form action url
					var request_method = $(this).attr("method"); //get form GET/POST method
					var form_data = $(this).serialize(); //Encode form elements for submission
					$('#myModal').modal('hide');
					$.ajax({
						url : post_url,
						type: request_method,
						data : form_data,
						dataType: 'json',
						success: function(response,textStatus ,jqXHR){
							$("#modalResultHTML").html("");
							$("#modalResultHTML").html(response);
					   		$('#modalResult').modal('show');
					    	setTimeout(function() { $('#modalResult').modal('hide'); }, 5000);
					    },
					    error: function(response,textStatus ,jqXHR){
					    	//console.log("Something really bad happened " + textStatus);
		                      $("#ajaxResponse").html(jqXHR.responseText);
					        }
					        
					});
					return false;
				});
				
		    });
	
	</script>
